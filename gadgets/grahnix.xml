<?xml version="1.0" encoding="UTF-8" ?> 
<Module>
  <ModulePrefs title="Preferences for __UP_myname__" height="400" 
    description="grahnix"
    author="Nikolaj Baer"
    author_email="grahnx@gmail.com" 
    author_link="http://grahnix.com" 
    scrolling="false"
    category="funandgames" /> 
  <UserPref name="grah" display_name="Name" default_value="50"/>
   <Content type="html"><![CDATA[
   <div id="content_div"></div>
   <script type="text/javascript">
   // Get userprefs
   var prefs = new gadgets.Prefs();
   var g;

   function grah () {
    var e = document.getElementById("content_div");
    e.style.backgroundColor = g==0?"ff00ff":"00ff00";
    g = (g+1)%2;
   }

   function init () {
    g=0;
    setInterval(grah,prefs.grah); 
   }

   // Pass the userprefs for this module instance to the function
   // (allows users to include multiple module instances on their page)
   gadgets.util.registerOnLoadHandler(init); 
  
   </script> 
   ]]>  
  </Content>
</Module>
